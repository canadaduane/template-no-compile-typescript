{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["src/**/*.js", "src/**/*.d.ts"]
}
